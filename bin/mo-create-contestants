#!/bin/bash

[ -f config ] || { echo "Missing config file, check cwd." ; exit 1 ; }
set -e
. config

H=`pwd`
cd $MO_ROOT
rm -rf users
mkdir users
cd users

for a in `cd $H && bin/mo-get-users` ; do
	echo "Creating $a"
	mkdir $a $a/$a
	chown root.$a $a
	chmod 750 $a
	cp -a `find $H/template -type f -name ".*"` $a/$a/
	chown $a.$a $a/$a -R
	chmod 700 $a/$a
done
