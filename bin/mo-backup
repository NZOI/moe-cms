#!/bin/sh
if [ -z "$1" ] ; then
	D=back/`date '+%H%M'`
else
	D=$1
fi
mkdir -p $D
for m in mo1{00,01,02,03,04,05,06,07,08,09,10,11,12,13,14,15,16} mo2{00,01,02,03,04,05,06,07,08,10,11,12,13,14,15,16} ; do
	echo -n "$m: "
	mkdir $p $D/$m
	pushd $D/$m >/dev/null
	ssh root@$m 'cd /aux/mo/users ; tar czf - .' | tar xzf -
	popd >/dev/null
	du -s $D/$m | cut -f 1
done
