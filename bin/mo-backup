#!/bin/sh
D=back/`date '+%H%M'`
mkdir -p $D
for m in mo1{01,02,03,04,05} mo2{01,02,03,04,05,06,07,08,09,10,11,12,13,14} mo3{01,02,03,04,05,06,07,08} mo4{01,02,03,04,05,06} ; do
	echo -n "$m: "
	mkdir $p $D/$m
	pushd $D/$m >/dev/null
	ssh root@$m 'cd /aux/mo/users ; tar czf - .' | tar xzf -
	popd >/dev/null
	du -s $D/$m | cut -f 1
done
